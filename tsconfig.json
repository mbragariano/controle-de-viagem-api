{
  "compilerOptions": {
		"lib": [
			"dom",
      "ESNext"
    ],
    "strict": false,
    "target": "ES2017",
    "outDir": "./build",
    "module": "commonjs",
    "skipLibCheck": true,
		"noEmitOnError": true,
		"noImplicitAny": true,
		"removeComments": true,
		"esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  },
	"include": [
		"index.ts",
		"src/**/*"
	]
}
